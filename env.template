# Master CMS Framework - Environment Configuration Template
# Copy this file to .env.local and customize for your site

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/master_cms"

# Site Basic Configuration
SITE_NAME="Master CMS Framework"
SITE_DOMAIN="http://localhost:3000"
SITE_DESCRIPTION="AI-Powered CMS Framework for Media Companies"
SITE_LOCALE="en"

# Branding Configuration
BRANDING_PRIMARY_COLOR="#2563eb"
BRANDING_SECONDARY_COLOR="#64748b"
BRANDING_ACCENT_COLOR="#f59e0b"
BRANDING_FONT_FAMILY="Inter, system-ui, sans-serif"
BRANDING_LOGO_URL="/images/logo.png"
BRANDING_FAVICON_URL="/favicon.ico"

# SEO Configuration
SEO_TITLE_EN="Master CMS Framework - AI-Powered Content Management"
SEO_TITLE_AR="إطار عمل إدارة المحتوى الرئيسي - إدارة محتوى مدعومة بالذكاء الاصطناعي"
