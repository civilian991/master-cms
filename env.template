SEO_KEYWORDS_AR="إدارة محتوى، ذكاء اصطناعي، إعلام، نشر"
SEO_OG_IMAGE="/images/og-image.jpg"

# Feature Configuration
FEATURES_AI="true"
FEATURES_ANALYTICS="true"
FEATURES_MONETIZATION="true"
FEATURES_MULTILINGUAL="true"
FEATURES_COMMENTS="false"
FEATURES_SOCIAL_SHARING="true"
FEATURES_SEARCH="true"
FEATURES_RSS="true"

# Content Type Configuration
CONTENT_TYPES_ARTICLES="true"
CONTENT_TYPES_NEWSLETTERS="true"
